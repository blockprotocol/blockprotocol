            "anyOf": [
              {
                "properties": {
                  "field": {
                    "type": "string"
                  },
                  "operator": {
                    "$ref": "#/$defs/FilterOperatorRequiringValue"
                  },
                  "value": {
                    "type": "string"
                  }
                },
                "type": "object"
              },
              {
                "properties": {
                  "field": {
                    "type": "string"
                  },
                  "operator": {
                    "$ref": "#/$defs/FilterOperatorWithoutValue"
