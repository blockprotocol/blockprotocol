{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://blockprotocol.org/types/modules/graph/0.3/schema/aggregation-operation",
  "title": "Aggregation Operation",
  "type": "object",
  "properties": {
    "operation": {
      "type": "object",
      "properties": {
        "multiFilter": {
          "type": "object",
          "properties": {
            "filters": {
              "type": "array",
              "items": {
                "anyOf": [
                  {
                    "type": "object",
                    "properties": {
                      "field": {
                        "$ref": "#/$defs/Field"
                      },
                      "operator": {
                        "$ref": "#/$defs/FilterOperatorRequiringValue"
                      },
                      "value": {
                      }
                    },
                    "required": [
                      "field",
                      "operator",
                      "value"
                    ],
                    "additionalProperties": false
                  },
                  {
                    "type": "object",
                    "properties": {
                      "field": {
                        "$ref": "#/$defs/Field"
                      },
                      "operator": {
                        "$ref": "#/$defs/FilterOperatorWithoutValue"
                      }
                    },
                    "required": [
                      "field",
                      "operator"
                    ],
                    "additionalProperties": false
                  }
                ]
              }
            },
            "operator": {
              "$ref": "#/$defs/MultiFilterOperatorType"
            }
          },
          "required": [
            "filters",
            "operator"
          ],
          "additionalProperties": false
        },
        "multiSort": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "field": {
                "$ref": "#/$defs/Field"
              },
              "desc": {
                "oneOf": [
                  {
                    "type": "boolean"
                  },
                  {
                    "type": "null"
                  }
                ]
              }
            },
            "required": [
              "field"
            ],
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "graphResolveDepths": {
      "$ref": "https://blockprotocol.org/types/modules/graph/0.3/schema/partial-graph-resolve-depths"
    }
  },
  "required": [
    "operation"
  ],
  "additionalProperties": false,
  "$defs": {
    "Field": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "string"
          },
          {
            "type": "number"
          }
        ]
      }
    },
    "FilterOperatorRequiringValue": {
      "enum": [
        "CONTAINS_SEGMENT",
        "DOES_NOT_CONTAIN_SEGMENT",
        "EQUALS",
        "DOES_NOT_EQUAL",
        "STARTS_WITH",
        "ENDS_WITH"
      ],
      "type": "string"
    },
    "FilterOperatorWithoutValue": {
      "enum": ["IS_DEFINED", "IS_NOT_DEFINED"],
      "type": "string"
    },
    "MultiFilterOperatorType": {
      "enum": ["AND", "OR"],
      "type": "string"
    }
  }
}
