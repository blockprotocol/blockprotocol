{
  "private": true,
  "description": "blockprotocol monorepo",
  "type": "module",
  "workspaces": [
    "packages/*",
    "packages/@blockprotocol/*",
    "packages/@local/*",
    "site"
  ],
  "scripts": {
    "exe": "node --unhandled-rejections=strict --experimental-loader ts-node/esm/transpile-only --es-module-specifier-resolution=node --require=./scripts/suppress-experimental-warnings.cjs --require dotenv-flow/config",
    "fix": "npm-run-all --continue-on-error \"fix:*\"",
    "@todo.1": "Remove the ignore argument below once react-block-loader is upgraded to 0.2 spec",
    "fix:dependency-version-consistency": "check-dependency-version-consistency --fix . --ignore-package=react-block-loader",
    "fix:eslint": "eslint \"**/*\" --fix",
    "fix:markdownlint": "markdownlint --fix \"**/*\"",
    "fix:prettier": "prettier --write --ignore-unknown \"**/*.*\"",
    "fix:yarn-deduplicate": "yarn install && yarn-deduplicate --strategy=fewer && yarn install",
    "lint": "npm-run-all --continue-on-error \"lint:*\"",
    "@todo.2": "Remove the ignore argument below once react-block-loader is upgraded to 0.2 spec",
    "lint:dependency-version-consistency": "check-dependency-version-consistency . --ignore-package=react-block-loader",
    "lint:eslint": "eslint \"**/*\"",
    "lint:lockfile-lint": "lockfile-lint --path yarn.lock --allowed-hosts registry.yarnpkg.com --allowed-schemes \"https:\"",
    "lint:markdownlint": "markdownlint \"**/*\"",
    "lint:prettier": "prettier --check --ignore-unknown \"**/*\"",
    "lint:tsc": "turbo run lint:tsc",
    "lint:yarn-deduplicate": "yarn-deduplicate --fail --list --strategy=fewer",
    "dev": "yarn workspace @blockprotocol/site dev",
    "dev:seed-db": "yarn workspace @blockprotocol/site dev:seed-db",
    "dev:db": "yarn workspace @blockprotocol/site dev:db",
    "prepare": "patch-package && yarn workspace @blockprotocol/site patch-package && turbo run codegen && turbo run build \"--filter=!./site/\""
  },
  "lint-staged": {
    "**/*": [
      "suppress-exit-code eslint --fix",
      "suppress-exit-code markdownlint --fix",
      "suppress-exit-code prettier --write"
    ]
  },
  "resolutions": {
    "@types/react": "^18.0.0"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.16.7",
    "@changesets/changelog-github": "^0.4.6",
    "@changesets/cli": "^2.24.2",
    "@types/fs-extra": "^9.0.13",
    "@types/wait-on": "5.3.1",
    "algoliasearch": "4.12.1",
    "axios": "^0.24.0",
    "chalk": "5.0.1",
    "check-dependency-version-consistency": "2.0.0",
    "concurrently": "^7.0.0",
    "dotenv-flow": "3.2.0",
    "envalid": "7.2.2",
    "execa": "^5.1.1",
    "fs-extra": "^10.1.0",
    "gray-matter": "^4.0.3",
    "husky": "7.0.4",
    "kill-port": "^2.0.1",
    "lint-staged": "12.3.3",
    "lockfile-lint": "4.6.2",
    "markdownlint-cli": "0.31.1",
    "npm-run-all": "4.1.5",
    "nyc": "^15.1.0",
    "patch-package": "6.4.7",
    "prettier": "2.5.1",
    "prettier-plugin-packagejson": "2.2.15",
    "prettier-plugin-sh": "0.8.1",
    "regenerator-runtime": "^0.13.9",
    "sleep-promise": "9.1.0",
    "suppress-exit-code": "1.0.0",
    "tmp-promise": "3.0.3",
    "tree-kill": "1.2.2",
    "ts-node": "10.8.0",
    "turbo": "1.4.3",
    "untildify": "4.0.0",
    "uuid": "^8.3.2",
    "wait-on": "6.0.1",
    "yarn-deduplicate": "3.1.0"
  },
  "engines": {
    "node": ">=16.14.0"
  }
}
