{
  "private": true,
  "description": "blockprotocol monorepo",
  "type": "module",
  "workspaces": [
    "packages/*",
    "packages/@blockprotocol/*",
    "site"
  ],
  "scripts": {
    "exe": "node --unhandled-rejections=strict --experimental-loader ts-node/esm/transpile-only --es-module-specifier-resolution=node --require=./scripts/suppress-experimental-warnings.cjs --require dotenv-flow/config",
    "fix": "npm-run-all --continue-on-error \"fix:*\"",
    "fix:dependency-version-consistency": "check-dependency-version-consistency --fix .",
    "fix:eslint": "eslint --report-unused-disable-directives \"**/*\" --fix",
    "fix:markdownlint": "markdownlint --fix \"**/*\"",
    "fix:prettier": "prettier --write --ignore-unknown \"**/*.*\"",
    "fix:yarn-deduplicate": "yarn install; yarn-deduplicate --strategy=fewer; yarn install",
    "lint": "npm-run-all --continue-on-error \"lint:*\"",
    "lint:dependency-version-consistency": "check-dependency-version-consistency .",
    "lint:eslint": "eslint --report-unused-disable-directives \"**/*\"",
    "lint:lockfile-lint": "lockfile-lint --path yarn.lock --allowed-hosts registry.yarnpkg.com --allowed-schemes \"https:\"",
    "lint:markdownlint": "markdownlint \"**/*\"",
    "lint:prettier": "prettier --check --ignore-unknown \"**/*\"",
    "lint:tsc": "yarn workspaces run lint:tsc",
    "lint:yarn-deduplicate": "yarn-deduplicate --fail --list --strategy=fewer",
    "dev": "yarn workspace @blockprotocol/site dev",
    "dev:seed-db": "yarn workspace @blockprotocol/site dev:seed-db",
    "dev:db": "yarn workspace @blockprotocol/site dev:db",
    "prepare": "patch-package && husky install && yarn workspace @blockprotocol/core run prepare && yarn workspace @blockprotocol/graph run prepare && yarn workspace mock-block-dock run prepare && yarn workspace @blockprotocol/site run prepare"
  },
  "lint-staged": {
    "**/*": [
      "suppress-exit-code eslint --fix",
      "suppress-exit-code markdownlint --fix",
      "suppress-exit-code prettier --write"
    ]
  },
  "devDependencies": {
    "@babel/eslint-parser": "7.17.0",
    "@babel/preset-react": "^7.16.7",
    "@types/fs-extra": "^9.0.13",
    "@types/wait-on": "5.3.1",
    "@typescript-eslint/eslint-plugin": "5.21.0",
    "@typescript-eslint/parser": "5.21.0",
    "algoliasearch": "4.12.1",
    "chalk": "5.0.1",
    "check-dependency-version-consistency": "2.0.0",
    "concurrently": "^7.0.0",
    "dotenv-flow": "3.2.0",
    "envalid": "7.2.2",
    "eslint": "8.8.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jest": "26.1.0",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-react": "7.28.0",
    "eslint-plugin-react-hooks": "4.3.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unicorn": "^42.0.0",
    "execa": "^5.1.1",
    "fs-extra": "^10.0.1",
    "gray-matter": "^4.0.3",
    "husky": "7.0.4",
    "lint-staged": "12.3.3",
    "lockfile-lint": "4.6.2",
    "markdownlint-cli": "0.31.1",
    "npm-run-all": "4.1.5",
    "patch-package": "6.4.7",
    "prettier": "2.5.1",
    "prettier-plugin-packagejson": "2.2.15",
    "prettier-plugin-sh": "0.8.1",
    "regenerator-runtime": "^0.13.9",
    "sleep-promise": "9.1.0",
    "suppress-exit-code": "1.0.0",
    "tmp-promise": "3.0.3",
    "tree-kill": "1.2.2",
    "ts-node": "10.8.0",
    "untildify": "4.0.0",
    "uuid": "^8.3.2",
    "wait-on": "6.0.0",
    "yarn-deduplicate": "3.1.0"
  },
  "engines": {
    "node": "^14.18.0 || >=16.13.0"
  }
}
