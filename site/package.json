{
  "name": "@blockprotocol/site",
  "version": "0.1.0",
  "description": "The public-facing blockprotocol.org website",
  "repository": "https://github.com/blockprotocol/blockprotocol.git",
  "license": "MIT",
  "scripts": {
    "build": "./scripts/build-blocks.sh && yarn generate-sitemap && next build",
    "build-block": "./scripts/build-blocks.sh",
    "build-blocks": "find ../registry -type f | xargs ./scripts/build-blocks.sh",
    "clean": "rimraf ./.next/",
    "dev": "yarn generate-sitemap && next dev",
    "generate-sitemap": "node --max-old-space-size=2048 node_modules/.bin/ts-node --files --project tsconfig.json scripts/generate-sitemap",
    "postinstall": "yarn generate-sitemap",
    "lint:tsc": "tsc --noEmit # @blockprotocol/site",
    "serve:dev-db": "docker-compose -f docker-compose.dev.yml --env-file .env.local up",
    "start": "next start"
  },
  "dependencies": {
    "@emotion/cache": "^11.6.0",
    "@emotion/react": "^11.7.0",
    "@emotion/server": "^11.4.0",
    "@emotion/styled": "^11.6.0",
    "@mui/material": "^5.2.1",
    "@twind/next": "1.0.8",
    "clsx": "^1.1.1",
    "connect-mongo": "^4.6.0",
    "date-fns": "^2.27.0",
    "dotenv": "^10.0.0",
    "express-session": "^1.17.2",
    "express-validator": "^6.14.0",
    "glob": "^7.2.0",
    "gray-matter": "^4.0.3",
    "gsap": "^3.8.0",
    "jsonschema": "^1.4.0",
    "lodash": "4.17.21",
    "mongodb": "^4.2.2",
    "next": "11.1.3",
    "next-connect": "^0.11.0",
    "next-fonts": "^1.5.1",
    "next-images": "1.8.1",
    "next-mdx-remote": "^3.0.8",
    "passport": "^0.5.2",
    "prismjs": "^1.25.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-slick": "^0.28.1",
    "remark-mdx": "1.6.22",
    "remark-parse": "9.0.0",
    "slick-carousel": "^1.8.1",
    "slugify": "^1.6.3",
    "twind": "^0.16.16",
    "unified": "9.2.2"
  },
  "devDependencies": {
    "@babel/runtime": "^7.16.3",
    "@types/express-session": "^1.17.4",
    "@types/lodash": "4.14.171",
    "@types/passport": "^1.0.7",
    "@types/prismjs": "^1.16.6",
    "@types/react": "17.0.7",
    "@types/react-dom": "17.0.8",
    "@types/react-slick": "^0.23.7",
    "babel-plugin-inline-react-svg": "2.0.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "typescript": "4.3.5"
  }
}
