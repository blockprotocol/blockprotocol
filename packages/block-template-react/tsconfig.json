{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "noEmit": true,
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "target": "es6",
    "resolveJsonModule": true
  },
  "include": ["src"]
}
